#!/bin/bash

ROOTDIR=$( cd "$( dirname "${BASH_SOURCE[0]}" )"/../.. && pwd )
export PYTHONPATH=${ROOTDIR}:$PYTHONPATH

cd $ROOTDIR/loom/master
./manage.py test

cd $ROOTDIR/loom/client
python -m unittest discover

cd $ROOTDIR/loom/worker
python -m unittest discover

cd $ROOTDIR/loom/common
python -m unittest discover
