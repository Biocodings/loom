{
    "requester": "someone@example.net",
    "constants": {
        "input_dir": "/Users/iliao/xppf/xppf/doc/examples/helloworld"
    },
    "workflows": [
        {
            "name": "hello_world",
            "imports": [
                "${input_dir}/hello.txt"
            ],
            "steps": [
                {
                    "name": "world_step",
                    "command": "echo world > world.txt",
                    "environment": {
                        "docker_image": "ubuntu"
                    },
                    "output_files": [
                        "world.txt"
                    ],
                    "resources": {
                        "cores": "1",
                        "memory": "1GB"
                    }
                },
                {
                    "name": "hello_world_step",
                    "command": "cat hello.txt world.txt > hello_world.txt",
                    "environment": {
                        "docker_image": "ubuntu"
                    },
                    "input_files": [
                        "hello.txt",
                        "world.txt"
                    ],
                    "output_files": [
                        "hello_world.txt"
                    ],
                    "resources": {
                        "cores": "1",
                        "memory": "1GB"
                    }
                }
            ]
        }
    ]
}
