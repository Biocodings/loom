{
    "name": "hello_world",
    "constants": {
        "input_dir": "/Users/iliao/loom/loom/doc/examples/helloworld"
    },
    "inputs": [
	{
            "from_path": "${input_dir}/hello.txt",
	    "into_channel": "hello"
	}
    ],
    "outputs": [
	{
	    "from_channel": "hello_world_out",
	}
    ]
    "steps": [
        {
            "name": "world_step",
            "command": "echo world > world.txt",
            "environment": {
                "docker_image": "ubuntu"
            },
            "resources": {
                "cores": "1",
                "memory": "1GB"
            }
	    "stepoutputs": [
		{
                    "from_path": "world.txt",
		    "to_channel": "world"
		}
            ],
        },
        {
            "name": "hello_world_step",
            "command": "cat {{ hello }} {{ world }} > hello_world.txt",
            "environment": {
                "docker_image": "ubuntu"
            },
	    "resources": {
                "cores": "1",
                "memory": "1GB"
            },
            "stepinputs": [
		{
		    "from_channel": "hello",
		    "to_path": "hello.txt"
		},
                {
		    "from_channel": "world",
		    "to_path": "world.txt"
		}
            ],
            "stepoutputs": [
		{
                    "from_path": "hello_world.txt",
		    "to_channel": "hello_world_out"
		}
            ]
        }
    ]
}
