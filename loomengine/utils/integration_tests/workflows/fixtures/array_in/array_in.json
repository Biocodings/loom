{
    "name": "join_files_workflow",
    "data_bindings": [
        {
            "destination": {
		"step": "join_files",
		"port": "files_to_join"
            },
	    "data_object": {
		"files": [
		    {
			"metadata": {"something": "anything"},
			"file_contents": {
			    "hash_value": "b1946ac92492d2347c6235b4d2611184", 
			    "hash_function": "md5"
			}
		    },
		    {
			"metadata": {"something": "anything"},
			"file_contents": {
			    "hash_value": "591785b794601e212b260e25925636fd",
			    "hash_function": "md5"
	     		}
		    }		 
		]
	    } 
        }
    ], 
    "steps": [
        {
            "environment": {
		"docker_image": "ubuntu"
            }, 
            "command": "cat {% for file in input_ports.files_to_join %}{{file.filename }} {% endfor %} > {{ output_ports.joined_files.filename }}", 
            "name": "join_files",
            "resources": {
		"cores": "1", 
		"memory": "1GB"
            }, 
	    "input_ports": [
		{
		    "name": "files_to_join",
		    "filename": "file.txt"
		}
	    ],
            "output_ports": [
		{
		    "name": "joined_files", 
		    "filename": "joined_files.txt"
		}
            ]
	}
    ]
}
